<UserControl x:Class="LearningUserControl.UserControls.CustomToggleSwitch5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LearningUserControl.UserControls"
             mc:Ignorable="d"  x:Name="ToggleSwitchContent5">

    <Grid Width="35" Height="20">
        <Border x:Name="tggGroove"
                                    Background="LightGray"
                                     CornerRadius="7"
                                     Height="14" Width="35"
                                     VerticalAlignment="Center" HorizontalAlignment="Center"
                MouseDown="ToggleSwitch_MouseDown" />
        <Ellipse x:Name="tggEllipse"
                                     Height="20"
                                     Width="20"
                                     Fill="DarkGray"
                                     VerticalAlignment="Center" HorizontalAlignment="Left"
                                    Stroke="Gray"
                                    StrokeThickness="3"
                 MouseDown="ToggleSwitch_MouseDown" />
    </Grid>
</UserControl>