<UserControl x:Class="LearningUserControl.UserControls.CustomInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LearningUserControl.UserControls"
             x:Name="InputCustomTitle"
             mc:Ignorable="d">
    <Grid>
        <Border x:Name="brdTextBox" BorderBrush="red" BorderThickness="1" Margin="10,10,10,10" Grid.Column="0" CornerRadius="5">
            <Grid>
                <TextBox x:Name="txtInput"
                         BorderThickness="0"
                         Padding="5,5,5,5"
                         Margin="10,10,10,10"
                         Text="nhap vao day"
                         Height="25"
                         Width="150"
                         ></TextBox>
                <Label x:Name="lbTitle"
                       Margin="5,-45,0,0"
                       Background="white"
                       HorizontalAlignment="Left"
                       Content="{Binding LabelTitleContent,ElementName=InputCustomTitle,FallbackValue='Tieu de'}"
                       Padding="5,0,5,0"
                       Height="15"
                       ></Label>
            </Grid>
        </Border>
    </Grid>
</UserControl>